<%= simple_form_for @beer do |f| %>
  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :description %>
  </div>

  <div class="form-group">
    <%= f.input :abv %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name, html: {class: "form-control"}  %>
  </div>

  <div class="form-group">
    <%= f.label :brewery %>
    <%= f.collection_select :brewery_id, Brewery.all, :id, :name, html: {class: "form-control"} %>
  </div>

  <div>
    <%= f.submit "Submit!", :class => "submit-button" %>
  </div>
<% end %>
