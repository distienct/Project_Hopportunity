<h1>Log In</h1>

<div class="col-md-4">
  <%= form_tag sessions_path, class: "form-horizontal" do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email,"", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password,"", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log In", class: "submit-button" %>
    </div>
  <% end %>
</div>
